<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_listview_item"
    >

    <TextView
        android:id="@+id/follow_wishlist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WishList Title"
        android:textColor="@color/red_border"
        android:textSize="30sp"
        android:padding="7dp"
        />

    <TextView
        android:id="@+id/follow_wishlist_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/follow_wishlist_name"
        android:layout_marginBottom="5dp"
        android:textSize="20sp"
        android:layout_marginLeft="12dp"
        android:text="@string/wishlist_description_text"
        android:textColor="@color/background"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/asset_listview_arrow"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        />
</RelativeLayout>