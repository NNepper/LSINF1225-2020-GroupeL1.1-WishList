<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Interface.ProfileCreationActivity"
    android:background="@color/background">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/newprofile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create new profile"
                android:textSize="35sp"
                android:textColor="@color/green_border"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="20dp"
                />

            <EditText
                android:id="@+id/newprofile_firstname"
                android:layout_width="319dp"
                android:layout_height="43dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/edit_round_input_text"
                android:layout_below="@id/newprofile_title"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:hint="firstname"
                android:textColor="@color/green_border"
                android:maxLines="1"/>

            <EditText
                android:id="@+id/newprofile_lastname"
                android:layout_width="319dp"
                android:layout_height="43dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/edit_round_input_text"
                android:layout_below="@id/newprofile_firstname"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:hint="lastname"
                android:textColor="@color/green_border"
                android:maxLines="1"/>

            <RelativeLayout
                android:id="@+id/new_profile_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/newprofile_lastname"
                android:layout_centerHorizontal="true">

                <EditText
                    android:id="@+id/new_profile_street"
                    android:layout_width="319dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/edit_round_input_text"
                    android:gravity="center"
                    android:hint="Street"
                    android:textColor="@color/green_border"
                    android:maxLines="1"/>

                <EditText
                    android:id="@+id/new_profile_zip"
                    android:layout_width="106dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/edit_round_input_text"
                    android:gravity="center"
                    android:hint="zip code"
                    android:layout_below="@id/new_profile_street"
                    android:textColor="@color/green_border"
                    android:maxLines="1"/>

                <EditText
                    android:id="@+id/new_profile_city"
                    android:layout_width="210dp"
                    android:layout_height="43dp"
                    android:layout_below="@id/new_profile_street"
                    android:layout_alignRight="@id/new_profile_street"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/edit_round_input_text"
                    android:gravity="center"
                    android:hint="City"
                    android:maxLines="1"
                    android:textColor="@color/green_border" />

            </RelativeLayout>


            <Spinner
                android:id="@+id/newprofile_color"
                android:layout_below="@id/new_profile_adress"
                android:layout_width="319dp"
                android:layout_height="43dp"
                android:background="@drawable/edit_round_input_text"
                android:spinnerMode="dropdown"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                />

            <Spinner
                android:id="@+id/newprofile_tshirt"
                android:layout_below="@id/newprofile_color"
                android:layout_width="319dp"
                android:layout_height="43dp"
                android:background="@drawable/edit_round_input_text"
                android:spinnerMode="dropdown"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                />

            <Spinner
                android:id="@+id/newprofile_trousers"
                android:layout_below="@id/newprofile_tshirt"
                android:layout_width="319dp"
                android:layout_height="43dp"
                android:background="@drawable/edit_round_input_text"
                android:spinnerMode="dropdown"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                />

            <Spinner
                android:id="@+id/newprofile_shoe"
                android:layout_below="@id/newprofile_trousers"
                android:layout_width="319dp"
                android:layout_height="43dp"
                android:background="@drawable/edit_round_input_text"
                android:spinnerMode="dropdown"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                />

            <Button
                android:id="@+id/newprofile_submit"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/newprofile_shoe"
                android:layout_centerHorizontal="true"
                android:background="@drawable/custom_red_button"
                android:text="SUBMIT"
                android:textColor="@color/red_border"
                />

        </RelativeLayout>
</ScrollView>