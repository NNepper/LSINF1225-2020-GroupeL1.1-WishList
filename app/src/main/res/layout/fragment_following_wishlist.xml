<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/custom_profile_top_bar" />

    <ImageView
        android:id="@+id/following_profil_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp"
        android:adjustViewBounds="true"
        android:background="@drawable/custon_round_profile_pic"
        app:srcCompat="@drawable/ic_default_image_profile" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/following_wishlist_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="651dp"
        android:layout_below="@id/following_profil_pic"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:padding="4dp" />

</RelativeLayout>