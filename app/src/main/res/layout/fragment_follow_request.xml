<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow requests"
        android:textSize="30sp"
        android:textColor="@color/green_border"
        android:layout_toRightOf="@id/follow_request_back_arrow"
        android:layout_marginVertical="20dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/follow_request_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="651dp"
        android:layout_below="@+id/TextView"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="6dp"
        android:padding="4dp" />

    <TextView
        android:id="@+id/noRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="148dp"
        android:text="@string/noFollowRequest"
        android:textSize="20sp"
        android:textColor="@color/green_border"/>

    <ImageView
        android:id="@+id/follow_request_back_arrow"
        android:layout_width="73dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_arrow"/>

</RelativeLayout>