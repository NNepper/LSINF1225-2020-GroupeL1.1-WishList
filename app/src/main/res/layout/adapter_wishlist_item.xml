<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="0dp"
    app:cardBackgroundColor="#00FFFFFF">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_listview_item"
        >

        <TextView
            android:id="@+id/item_wishlist_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WishList Title"
            android:textColor="@color/red_border"
            android:textSize="30sp"
            android:padding="10dp"
            />

        <ImageView
            android:id="@+id/wishlist_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/asset_delete" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/asset_listview_arrow"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
