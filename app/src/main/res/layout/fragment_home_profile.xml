<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="-0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/profilePrivacySwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17dp"
                android:button="@drawable/privacy_switch_button" />

            <ImageView
                android:id="@+id/see_requests"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="52dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_notifications_none_24dp" />

            <EditText
                android:id="@+id/profileUsername"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="31dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="31dp"
                android:background="@drawable/custom_profile_info_bar"
                android:maxLines="1"
                android:inputType="text"
                android:nextFocusDown="@id/profileAddress"
                android:paddingStart="10dp"
                android:text="@string/profileViewUsername" />

            <EditText
                android:id="@+id/profileAddress"
                android:layout_width="310dp"
                android:layout_height="100dp"
                android:layout_below="@+id/profileUsername"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="33dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/custom_profile_info_bar"
                android:paddingStart="10dp"
                android:text="@string/profileAddress" />


            <Spinner
                android:id="@+id/profileSpinnerShoeSize"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_below="@+id/profileAddress"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="31dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="31dp"
                android:background="@drawable/custom_profile_info_bar"
                android:popupBackground="@android:color/transparent"
                android:spinnerMode="dropdown" />


            <Spinner
                android:id="@+id/profileSpinnerTshirtSize"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="31dp"
                android:layout_marginEnd="31dp"
                android:layout_below="@+id/profileSpinnerShoeSize"
                android:background="@drawable/custom_profile_info_bar"
                android:spinnerMode="dropdown"
                android:popupBackground="@android:color/transparent"/>

            <Spinner
                android:id="@+id/profileSpinnerTrouserSize"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="31dp"
                android:layout_marginEnd="31dp"
                android:layout_marginBottom="0dp"
                android:layout_below="@+id/profileSpinnerTshirtSize"
                android:background="@drawable/custom_profile_info_bar"
                android:spinnerMode="dropdown"
                android:popupBackground="@android:color/transparent"/>

            <Spinner
                android:id="@+id/profileSpinnerColor"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_below="@+id/profileSpinnerTrouserSize"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="31dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="31dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/custom_profile_info_bar"
                android:popupBackground="@android:color/transparent"
                android:spinnerMode="dropdown" />

            <Button
                android:id="@+id/my_interests_button"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_below="@+id/profileSpinnerColor"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="31dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="31dp"
                android:background="@drawable/custom_profile_info_bar"
                android:text="Choose my interests" />

        </RelativeLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/custom_profile_top_bar" />

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp"
        android:adjustViewBounds="true"
        android:background="@drawable/custon_round_profile_pic"
        app:srcCompat="@drawable/ic_default_image_profile" />

    <ImageView
        android:id="@+id/profileConfirm"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_check_black_24dp" />

    <ImageView
        android:id="@+id/profileLogOut"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_exit_to_app_black_24dp" />



</RelativeLayout>